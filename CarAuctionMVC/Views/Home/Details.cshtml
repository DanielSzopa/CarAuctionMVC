@model CarAuctionMVC.Application.Dtos.AuctionDetailsDto

@{
    ViewData["Title"] = "Szczegóły aukcji";
}

<h1>@Html.DisplayFor(a => a.Brand) @Html.DisplayFor(a => a.Model)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tytuł
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuctionTittle)
        </dd>
        <dt class = "col-sm-2">
            Data Aukcji
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuctionDate)
        </dd>
        <dt class = "col-sm-2">
            Kup teraz
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyNowPrice) zł
        </dd>
        <dt class = "col-sm-2">
            Kwota licytacji
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuctionPrice) zł
        </dd>
        <dt class = "col-sm-2">
            Marka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            Model
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Podwozie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameOfCarBody)
        </dd>
        <dt class = "col-sm-2">
            Kategoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            Silnik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EngineName)
        </dd>
        <dt class = "col-sm-2">
            Kraj pochodzenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryOfOrigin)
        </dd>
        <dt class = "col-sm-2">
            Rok produkcji
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfProduction)
        </dd>
        <dt class = "col-sm-2">
            Przebieg
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mileage) km
        </dd>
        <dt class = "col-sm-2">
            Kolor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
    </dl>
</div>
<div>
    @{
        var bidPrice = Model.AuctionPrice + 100;
    }
    <form class="form-inline" asp-controller="Home" asp-action="Bid" method="post">
        <div>
            <input class="form-control w-25 d-inline" type="number" placeholder="Licytuj" aria-label="bid" name="auctionPrice" id="auctionPrice" asp-for="@bidPrice">
            <input type="hidden" asp-for="Id"/>
            <button class="btn btn-success d-inline" type="submit">Licytuj</button>
        </div>
    </form>
</div>
<p></p>
<div>
    <a class="btn btn-success" asp-action="BuyNow" asp-route-id="@Model.Id">Kup teraz</a>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
    <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@Model.Id">Usuń</a>
    <a style="margin-left:90px" class="btn btn-secondary" asp-action="Index">Cofnij</a>
</div>
