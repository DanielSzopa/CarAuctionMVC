@model CarAuctionMVC.Application.Dtos.ListOfAuctionDto

@{
    ViewData["Title"] = "Aukcje";
}

<h1>Aukcja samochodów</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nowa aukcja</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Tytuł
            </th>
            <th>
                Marka
            </th>
            <th>
                Model
            </th>
            <th>
                Rocznik
            </th>
            <th>
                Cena
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Auctions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) zł
            </td>
            <td>
                @*@Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })*@
                
                <a class="btn btn-secondary" asp-route-id="@item.Id" asp-action="Edit">Edytuj</a>
                <a class="btn btn-secondary" asp-route-id="@item.Id" asp-action="Details">Szczegóły</a>
                <a class="btn btn-secondary" asp-route-id="@item.Id" asp-action="Delete">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
